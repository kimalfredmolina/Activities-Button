<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/appbar_title"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ActivitiesButton"
        tools:targetApi="31">
        <activity
            android:name=".TabFragment"
            android:exported="false" />
        <activity
            android:name=".Dialogs"
            android:exported="false" /> <!-- MainActivity -->
        <activity
            android:name=".PopupmenuActivity"
            android:exported="false" /> <!-- PopupmenuActivity -->
        <activity
            android:name=".MainPickers"
            android:exported="false" />
        <activity
            android:name=".ContextualMenu"
            android:exported="false" />
        <activity
            android:name=".AppBarCM"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>